                        <div class="d-flex" id="regret_check">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="regret"
                              id="regret_yes"
                              value="yes"
                            />
                            <label class="form-check-label" for="regret_yes"
                              >Yes</label
                            >
                          </div>
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="regret"
                              id="regret_no"
