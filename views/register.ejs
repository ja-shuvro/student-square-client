    <style>
      .main-bg {
        background: linear-gradient(222deg, #f0454d36, #049b4d27);
        background-size: 400% 400%;

        -webkit-animation: AnimationName 30s ease infinite;
        -moz-animation: AnimationName 30s ease infinite;
        animation: AnimationName 30s ease infinite;
      }

      @-webkit-keyframes AnimationName {
        0% {
          background-position: 92% 0%;
        }
        50% {
          background-position: 9% 100%;
        }
        100% {
          background-position: 92% 0%;
        }
      }
      @-moz-keyframes AnimationName {
        0% {
          background-position: 92% 0%;
        }
        50% {
          background-position: 9% 100%;
        }
        100% {
          background-position: 92% 0%;
        }
      }
      @keyframes AnimationName {
        0% {
          background-position: 92% 0%;
        }
        50% {
          background-position: 9% 100%;
        }
        100% {
          background-position: 92% 0%;
        }
      }
      .form-outline .form-control {
        border-color: #00000030 !important;
        border: 1px solid;
      }
    </style>
  </head>
  <body>
    <section class="main-bg">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-xl-10">
            <div class="card p-4 pt-0" style="border-radius: 1rem">
              <form action="/submit" method="POST" id="register">
                <div class="d-flex flex-column p-2 pt-5 align-items-center">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <a href="/">
                      <img
                        src="./src/img/SSLandscapeLogo.png"
                        alt=""
                        srcset=""
                        style="width: 200px"
                      />
                    </a>
                  </div>
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i
                      class="fas fa-cubes fa-2x me-3"
                      style="color: #ff6219"
                    ></i>
                    <span class="h3 capitalize fw-bold mb-0"
                      >Welcome to our family!</span
                    >
                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
                    Sign into your account
                  </h5>
                </div>

                <div class="row g-0">
                  <div class="col-md-6 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
                      <div data-mdb-input-init class="form-outline mb-4">
                        <input
                          type="name"
                          name="name"
                          id="form2Example21"
                          class="form-control form-control-lg"
                        />
                        <label class="form-label" for="form2Example21"
                          >Full Name</label
                        >
                      </div>
                      <div data-mdb-input-init class="form-outline mb-4">
                        <input
                          type="phone"
                          name="phone"
                          id="form2Example18"
                          class="form-control form-control-lg"
                        />
                        <label class="form-label" for="form2Example18"
                          >Phone No</label
                        >
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input
                          type="password"
                          name="password"
                          id="password"
                          class="form-control form-control-lg"
                        />
                        <label class="form-label" for="password"
                          >Password</label
                        >
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <select
                          data-mdb-select-init
                          name="levelofStudy"
                          class="form-control form-control-lg border"
                        >
                          <option value="">Select Level of Study</option>
                          <option value="9th">Class 9th</option>
                          <option value="1th">Class 10th</option>
                          <option value="11th">Class 11th</option>
                          <option value="12th">Class 12th</option>
                          <option value="Honours 1st year">
                            Honours 1st year
                          </option>
                          <option value="Honours 2nd year">
                            Honours 2nd year
                          </option>
                          <option value="Honours 3rd year">
                            Honours 3rd year
                          </option>
                          <option value="Honours 4th year">
                            Honours 4th year
                          </option>
                        </select>
                        <!-- <label class="form-label" for=""
                          >Level of Study</label
                        > -->
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input
                          type="text"
                          name="institutionName"
                          id="institution_name"
                          class="form-control form-control-lg"
                        />
                        <label class="form-label" for="institution_name"
                          >Institution Name</label
                        >
                      </div>

                      <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="confusion_check"
                          >Did you face confusion in subject choosing?</label
                        >
                        <div class="d-flex" id="confusion_check">
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="confusion"
                              id="confusion_yes"
                              value="no"
                            />
                            <label class="form-check-label" for="confusion_yes"
                              >Yes</label
                            >
                          </div>
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="confusion"
                              id="confusion_no"
                              value="no"
                            />
                            <label class="form-check-label" for="confusion_no"
                              >No</label
