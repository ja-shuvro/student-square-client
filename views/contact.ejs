<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Us - Student Square</title>
    <link
      rel="shortcut icon"
      href="/src/img/SSsiteIcon.png"
      type="image/x-icon"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
      rel="stylesheet"
    />

    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="/src/css/main.css" />

    <style>
      .map-responsive {
        position: relative;
      }
      .map-responsive iframe {
        width: 100%;
        height: 1000px;
        position: relative;
      }
      .map-responsive::before {
        content: "";
        background: #00000040;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        z-index: 1;
      }
      .main-contact {
        position: absolute;
        width: 100%;
        height: auto;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      .box-contact {
        background: #fff;
        width: 100%;
        padding: 2rem;
        border-radius: 15px;
        position: relative;
        z-index: 2;
      }

      .contact-info {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      a {
        color: #14a44d;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <!-- Google Maps Embed -->
    <div class="map-responsive">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3648.1477958345093!2d90.4124696153723!3d23.810331784557606!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c6f437d7fb1b%3A0x28b81a8e9ffeb4cf!2sDhaka%20University%20of%20Engineering%20%26%20Technology%20(DUET)!5e0!3m2!1sen!2sbd!4v1624942556198!5m2!1sen!2sbd"
        width="600"
        height="450"
        style="border: 0"
        allowfullscreen=""
        loading="lazy"
      >
      </iframe>

      <div class="container my-5 main-contact">
        <div class="box-contact">
          <h2 class="text-center mb-4">Contact Us</h2>
          <div class="contact-info">
            <p>
              <strong>Call:</strong>
              <a href="tel:+8801711455858">01711455858</a> (9AM - 10PM)
            </p>
            <p>
              <strong>SMS:</strong> Text <strong>SSHelp</strong> to
              <a href="sms:+8801711455858">01711455858</a>
            </p>
            <p>
              <strong>Email:</strong>
              <a href="mailto:studentsquarebd@gmail.com"
                >studentsquarebd@gmail.com</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer.ejs') %>

    <!-- jQuery -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <!-- Bootstrap tooltips -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
    ></script>
    <!-- Bootstrap core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"
    ></script>
    <!-- MDB core JavaScript -->
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"
    ></script>
  </body>
</html>
